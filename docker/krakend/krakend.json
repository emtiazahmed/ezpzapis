{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "plugin/http-server": {
      "name": [
        "url-rewrite"
      ],
      "url-rewrite": {
        "literal": {},
        "regexp": []
      }
    },
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 2,
      "exporters": {
        "zipkin": {
          "collector_url": "http://tempo:9411",
          "service_name": "krakend"
        }
      }
    },
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 2,
      "exporters": {
        "prometheus": {
          "port": 9091,
          "namespace": "krakend",
          "tag_host": false,
          "tag_path": true,
          "tag_method": true,
          "tag_statuscode": false
        }
      }
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  }
}